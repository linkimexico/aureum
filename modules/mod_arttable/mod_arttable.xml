	<files>
		<filename module="mod_arttable">mod_arttable.php</filename>
		<folder>tables</folder>
		<folder>library</folder>
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="loadJQuery" type="list" default="1" label="Load jQuery library" description="Load jQuery javascript library? Choose no if it is always included in your pages">
		  <option value="1">yes</option>
		  <option value="0">no</option>
		</param>
		<param name="title" type="text" default="" label="Title" description="Title"/>
		<param name="className" type="text" default="arttable_table" label="CSS class name" description="CSS class name for table"/>
		<param name="sqlQuery" type="textarea" default="" rows="20" cols="30" label="SQL Query" description="SQL Query" />
    <param name="connectionString" type="text" default="" label="Connection string" description="Connection string for database if using database another than Joomla! default. Example: mysqli,localhost,db_name,root,pass" />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />
				<field name="loadJQuery" type="list" default="1" label="Load jQuery library" description="Load jQuery javascript library? Choose no if it is always included in your pages">
				  <option value="1">yes</option>
				  <option value="0">no</option>
				</field>
				<field name="title" type="text" default="" label="Title" description="Title"/>
				<field name="className" type="text" default="arttable_table" label="CSS class name" description="CSS class name for table"/>
				<field name="sqlQuery" type="textarea" default="" rows="20" cols="30" label="SQL Query" description="SQL Query" filter="raw"/>
        <field name="connectionString" type="text" default="" label="Connection string" description="Connection string for database if using database another than Joomla! default. Example: mysqli,localhost,db_name,root,pass" />
			</fieldset>
		</fields>
	</config>
</extension>