<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="2.5"
        method="upgrade"
        client="site">
    <name>J2 Store Discount Order</name>
    <creationDate>MAY 2017</creationDate>
    <author>Alagesan</author>
    <copyright>Copyright (c) 2017 Cartrabbit Technologies Private Ltd. All rights reserved.</copyright>
    <authorEmail>support@j2store.org</authorEmail>
    <authorUrl>http://j2store.org</authorUrl>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0</version>
    <description>
        <![CDATA[ J2Store Coupon and voucher apply module ]]>
    </description>
    <files>
        <filename module="mod_j2store_discountorder">mod_j2store_discountorder.php</filename>
        <filename>index.html</filename>
        <filename>mod_j2store_discountorder.xml</filename>
        <folder>tmpl</folder>
        <folder>js</folder>
    </files>
    <languages>
        <language tag="en-GB">languages/en-GB.mod_j2store_discountorder.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic" >
                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
                <field name="enable_coupon" type="radio" default="1" class="btn-group"
                       label="j2store_conf_enable_coupon_label" description="j2store_conf_enable_coupon_desc">
                    <option value="0">j2store_no</option>
                    <option value="1">j2store_yes</option>
                </field>

                <field name="enable_voucher" type="radio" default="1" class="btn-group"
                       label="j2store_conf_enable_voucher_label" description="j2store_conf_enable_voucher_desc">
                    <option value="0">j2store_no</option>
                    <option value="1">j2store_yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
