<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>Easy Profile - Author plugin</name>
	<author>JSN Project</author>
	<creationDate>December 2013</creationDate>
	<copyright>(C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>fiorino.desanto@gmail.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>

	<files>
		<filename plugin="jsn_author">jsn_author.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="show_avatar"
					label="Show Avatar"
					description="Set if you want to show avatar near Author name"
					type="radio"
					default="0"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
